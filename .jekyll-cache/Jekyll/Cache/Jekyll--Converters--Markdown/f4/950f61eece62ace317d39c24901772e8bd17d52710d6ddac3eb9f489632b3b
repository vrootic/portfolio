<noscript><pre>import numpy as np
import matplotlib.pyplot as plt

%matplotlib inline
import requests

r = requests.get(&quot;http://nrl.iis.sinica.edu.
    tw/LASS/last-all-airbox.json&quot;)
data = r.json()[&#39;feeds&#39;]
print(data[0])
temperature = []
humidity = []
pm25 = []
lat = []
lon = []
for site in data:
    lat.append(site[&#39;gps_lat&#39;])
    lon.append(site[&#39;gps_lon&#39;])
    temperature.append(site[&#39;s_t0&#39;])
    humidity.append(site[&#39;s_h0&#39;])

plt.subplot(3, 1, 1)
plt.plot(temperature)
plt.subplot(3, 1, 2)
plt.scatter(lat, lon, c=humidity)
</pre></noscript>
